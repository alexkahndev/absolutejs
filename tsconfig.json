{
  "compilerOptions": {
   "target": "ESNext",
		"module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
  },
  "include": ["src/**/*", "example/**/*"], 
  "exclude": ["node_modules"] 
}
